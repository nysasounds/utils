# MythTV native LIRC config file for
# RC6_MCE IR device
#
# 2013 - nysasounds


################## MythTV Control ######################
### http://www.mythtv.org/wiki/index.php/Keybindings ###

#       Remote Button
##      MythTV function



### keyless
#
# KEY_DVD
# KEY_TUNER
# KEY_DELETE
# KEY_ENTER
# KEY_SUBTITLE
#


# Restart Myth #
begin
prog = irexec
button = KEY_SLEEP
config = /home/mythtv/scripts/restart-frontend.sh
end


#       KEY_MEDIA
##      Go to home page
begin
prog = mythtv
button = KEY_MEDIA
config = ALT+H
end

#       KEY_TV
##      Go to Watch TV
begin
prog = mythtv
button = KEY_TV
config = ALT+T
end

#       KEY_VIDEO
##      Go to MythVideo
begin
prog = mythtv
button = KEY_VIDEO
config = ALT+V
end

#       KEY_AUDIO
##      Go to MythMusic
begin
prog = mythtv
button = KEY_AUDIO
config = ALT+M
end

#       KEY_CAMERA
##      Go to MythGallery
begin
prog = mythtv
button = KEY_CAMERA
config = ALT+P
end


#       KEY_EPG
##      display EPG
begin
prog = mythtv
button = KEY_EPG
config = s
end


#       KEY_PLAY
##      Play
begin
prog = mythtv
button = KEY_PLAY
config = Space
end

#       KEY_PAUSE
##      Pause
begin
prog = mythtv
button = KEY_PAUSE
config = P
end

#       KEY_STOP
##      Stop
begin
prog = mythtv
button = KEY_STOP
config = Esc
end

#       KEY_RECORD
##      Record
begin
prog = mythtv
button = KEY_RECORD
config = R
end

#       KEY_REWIND
##      ReWind
begin
prog = mythtv
button = KEY_REWIND
config = Left
end

#       KEY_FASTFORWARD
##      ForwardWind
begin
prog = mythtv
button = KEY_FASTFORWARD
config = Right
end

#       KEY_PREVIOUS
##      Skip Back
begin
prog = mythtv
button = KEY_PREVIOUS
config = PgUp
end

#       KEY_NEXT
##      Skip Forward
begin
prog = mythtv
button = KEY_NEXT
config = PgDown
end


#       KEY_UP
##      Up
begin
prog = mythtv
button = KEY_UP
config = Up
repeat = 2
end

#       KEY_DOWN
##      Down
begin
prog = mythtv
button = KEY_DOWN
config = Down
repeat = 2
end

#       KEY_LEFT
##      Left
begin
prog = mythtv
button = KEY_LEFT
config = Left
repeat = 2
end

#       KEY_RIGHT
##      Right
begin
prog = mythtv
button = KEY_RIGHT
config = Right
repeat = 2
end

#       KEY_OK
##      Select/enter/resolve
begin
prog = mythtv
button = KEY_OK
config = Return
end

#       KEY_EXIT
##      Exit/go back/cancel
begin
prog = mythtv
button = KEY_EXIT
config = Esc
end

#       KEY_INFO
##      Menu
begin
prog = mythtv
button = KEY_INFO
config = m
end


#       KEY_CHANNELUP
##      Up
begin
prog = mythtv
button = KEY_CHANNELUP
config = Up
end

#       KEY_CHANNELDOWN
##      Down
begin
prog = mythtv
button = KEY_CHANNELDOWN
config = Down
end

#       KEY_VOLUMEUP
##      Volume Up
begin
prog = mythtv
button = KEY_VOLUMEUP
config = F11
repeat = 2
end

#       KEY_VOLUMEDOWN
##      Volume down
begin
prog = mythtv
button = KEY_VOLUMEDOWN
config = F10
repeat = 2
end

#       KEY_MUTE
##      Mute
begin
prog = mythtv
button = KEY_MUTE
config = F9
end


